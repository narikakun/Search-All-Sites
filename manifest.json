{
    "manifest_version": 2,
    "name": "Search All Sites",
    "description": "入力した検索ワードを登録されている検索エンジン全部で検索するChrome拡張機能です。",
    "version": "1.0.0",
    "icons": {
        "32": "icon/32.png",
        "48": "icon/48.png",
        "128": "icon/128.png"
    },
    "browser_action": {
        "default_icon": "icon/32.png",
        "default_title": "",
        "default_popup": "search.html"
    },
    "permissions": [
        "tabs"
    ]
}
